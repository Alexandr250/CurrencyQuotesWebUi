@model IEnumerable<CurrencyQuotesCore.Entites.Currency>

@{ Layout = null; }

<!doctype html>
<html lang="en">
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/lib/jquery/dist/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery/dist/jquery-ui.js" type="text/javascript"></script>
    <script src="~/lib/knockout-3.5.1.js" type="text/javascript"></script>
    <script src="~/js/table.js" type="text/javascript"></script>

    <meta name="viewport" content="width=device-width" />
    <title>CurrencyQuotesWebUi</title>
</head>
<body>
    <div class="container">
        <div class="row h-100">
            <div class="col-sm-12 my-auto">
                <div class="card card-block w-50 mx-auto main-form">
                    <div class="form-header">
                        Котировки
                    </div>
                    <div class="form-body">
                        <button type="button" class="btn btn-primary button"><i class="fa fa-download icon"></i>Загрузить</button>
                        <button type="button" class="btn btn-primary button" data-bind="click: getData"><i class="fa fa-history icon"></i>Обновить</button>
                    </div>
                    <div id="table-wrapper">
                        <div id="table-scroll">
                            <table id="scroolable-table" class="table table-striped table-bordered table-sm form-table" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th scope="col">Код валюты</th>
                                        <th scope="col">Цифровой код</th>
                                        <th scope="col">Символьный код</th>
                                        <th scope="col">Номинал</th>
                                        <th scope="col">Наименование валюты</th>
                                        <th scope="col">Курс</th>
                                        <th scope="col">Предыдущий курс</th>
                                    </tr>
                                </thead>
                                <tbody id="selectable-table" data-bind="foreach: currencies">
                                    <tr>
                                        <td data-bind="text: ID"></td>
                                        <td data-bind="text: NumCode"></td>
                                        <td data-bind="text: CharCode"></td>
                                        <td data-bind="text: Nominal"></td>
                                        <td data-bind="text: Name"></td>
                                        <td data-bind="text: Value"></td>
                                        <td data-bind="text: Previous"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="find-field-wrapper">
                        <div class="input-group mb-3 find-field">
                            <input type="text" class="form-control" placeholder="Фрагмент для поиска" aria-label="find-fragment" aria-describedby="basic-addon2" data-bind = "value: filter, valueUpdate: 'keyup'">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button"><i class="fa fa-search icon"></i>Поиск</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
